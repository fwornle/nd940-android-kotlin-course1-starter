<?xml version="1.0" encoding="utf-8"?>

<!-- horizontal fragment for a single shoe entry -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal"
    android:layout_gravity="center">

    <!-- shoe image -->
    <ImageView
        android:tag="shoeImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="@dimen/horizontal_margin_small"
        android:gravity="center_vertical"
        android:contentDescription="@string/it_s_a_shoe"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/shoe"
        />

    <!-- shoe name -->
    <TextView
        android:tag="shoeName"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:layout_marginStart="@dimen/horizontal_margin_small"
        android:gravity="center_vertical"
        android:text="Shoe Name"
        android:textSize="@dimen/label_text_size"
        android:textStyle="bold" />

    <!-- shoe description -->
    <TextView
        android:tag="shoeDesc"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:layout_marginStart="@dimen/horizontal_margin_small"
        android:gravity="center_vertical"
        android:text="Description"
        android:textSize="@dimen/label_text_size"
        />

    <!-- shoe size -->
    <TextView
        android:tag="shoeSize"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:layout_marginStart="@dimen/horizontal_margin_small"
        android:gravity="center_vertical"
        android:text="Size"
        android:textSize="@dimen/label_text_size"
        />

</LinearLayout>
